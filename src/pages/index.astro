---
import App from '../components/App.tsx';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- SEO Meta Tags -->
		<title>Did You Em Dash Before AI? | Prove Your Pre-ChatGPT Writing</title>
		<meta name="description" content="Some claim em dashes indicate AI writing. Check your old Hacker News posts to prove you used them before ChatGPT existed. Counter AI detection claims with evidence." />
		<meta name="robots" content="index, follow" />
		<link rel="canonical" href="https://didyouemdash.com/" />
		
		<!-- Open Graph Tags -->
		<meta property="og:title" content="Did You Em Dash Before AI?" />
		<meta property="og:description" content="Some claim em dashes indicate AI writing. Check your old Hacker News posts to prove you used them before ChatGPT existed." />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://didyouemdash.com/" />
		<meta property="og:site_name" content="Did You Em Dash?" />
		
		<!-- Twitter Card Tags -->
		<meta name="twitter:card" content="summary" />
		<meta name="twitter:site" content="@DidYouEmDash" />
		<meta name="twitter:title" content="Did You Em Dash Before AI?" />
		<meta name="twitter:description" content="Some claim em dashes indicate AI writing. Check your old Hacker News posts to prove you used them before ChatGPT existed." />
		
		<!-- Favicons -->
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="manifest" href="/site.webmanifest" />
		
		<!-- JSON-LD Structured Data -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "WebApplication",
			"name": "Did You Em Dash?",
			"description": "Analyze your Hacker News submissions from before ChatGPT to prove you used em dashes before AI writing tools existed",
			"url": "https://didyouemdash.com/",
			"applicationCategory": "UtilityApplication",
			"operatingSystem": "Web Browser",
			"offers": {
				"@type": "Offer",
				"price": "0",
				"priceCurrency": "USD"
			},
			"author": {
				"@type": "Person",
				"name": "backnotprop"
			},
			"featureList": [
				"Search Hacker News submissions before November 2022",
				"Detect em dash usage patterns in your writing",
				"Counter AI detection claims with historical evidence",
				"Share proof of pre-ChatGPT writing style"
			]
		}
		</script>
		<style>
			body {
				margin: 0;
				padding: 0;
				background-color: #f5f5f5;
				min-height: 100vh;
			}
		</style>
	</head>
	<body>
		<App client:load />
	</body>
</html>
